{
  "name": "templatemakertoolkit",
  "version": "1.0.0",
  "description": "Template Maker Toolkit",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "prettier-format": "prettier --config .prettierrc.json './src/**/*.ts' --write",
    "livereload": "livereload ./dist/public/example01 --port 3040",
    "watch": "nodemon -e html,css -w ./src/templates/ --exec \"npm run copy:html & npm run build:css\"",
    "build:css": "postcss ./src/templates/main.css -o ./dist/public/main.css",
    "copy:html": "copyfiles -a -u 2 ./src/templates/**/*.html ./dist/public",
    "build": "npm run tsc && npm run build:css && npm run copy:html",
    "dev": "concurrently -p live --kill-others \"npm run tsc && npm run copy:html && (node dist/main.js true & npm run watch)\"",
    "prod": "npm run tsc && npm run build:css && npm run copy:html && node dist/main.js false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s4ng3r/template-maker-toolkit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/s4ng3r/template-maker-toolkit/issues"
  },
  "homepage": "https://github.com/s4ng3r/template-maker-toolkit#readme",
  "dependencies": {
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "serve-index": "^1.9.1",
    "shrink-ray-current": "^4.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/livereload": "^0.9.2",
    "@types/node": "^18.11.18",
    "@types/serve-index": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  }
}
